	<!-- 黑灰名单定时任务 -->
	<bean name="LoadBlackBookDataJob" class="com.gdnybank.hnm.timejob.LoadBlackBookDataJob" />
	<bean id="LoadBlackBookDataJobDetail"
		  class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="LoadBlackBookDataJob"/>
		<property name="targetMethod" value="exeJob"/>
	</bean>
	<bean id="LoadBlackBookDataJobTrigger"
		  class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="LoadBlackBookDataJobDetail"/>
		<property name="cronExpression" value="0 0 */1 * * ?"/>
	</bean>

	<!-- 卸数本卡他行交易流水 -->
	<bean name="LoadSynTradeInfoDataJob" class="com.gdnybank.hnm.timejob.LoadSynTradeInfoDataJob" />
	<bean id="LoadSynTradeInfoDataJobDetail"
		  class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="LoadSynTradeInfoDataJob"/>
		<property name="targetMethod" value="exeJob"/>
	</bean>
	<bean id="LoadSynTradeInfoDataJobTrigger"
		  class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="LoadSynTradeInfoDataJobDetail"/>
		<property name="cronExpression" value="0 0 */1 * * ?"/>
	</bean>

	<!-- 合并AllTradeInfo数据 -->
	<bean name="MergerTradeInfoDataJob" class="com.gdnybank.hnm.timejob.MergerTradeInfoData" />
	<bean id="MergerTradeInfoDataJobDetail"
		  class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="MergerTradeInfoDataJob"/>
		<property name="targetMethod" value="exeJob"/>
	</bean>
	<bean id="MergerTradeInfoDataJobTrigger"
		  class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="MergerTradeInfoDataJobDetail"/>
		<property name="cronExpression" value="0 */30 * * * ?"/>
	</bean>
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean"
		  autowire="no">
		<property name="triggers">
			<list>
				<ref bean="SynCoreDateJobTrigger" />
				<ref bean="SynBranchInfoJobTrigger" />
				<ref bean="WarnTimeSendMegJobTrigger" />
				<ref bean="SiteTimeTaskTrigger" />
				<ref bean="LoadXGDataJobTrigger" />
				<ref bean="LoadZNDataJobTrigger" />
				<ref bean="ApprovalWarnSendMsgJobTrigger" />
				<ref bean="Inspection1JobTrigger" />
				<ref bean="QuestionWarnSendMsgJobTrigger" />
				<ref bean="NewlyRiskWarnSendMsgJob1Trigger" />
				<ref bean="MergerTradeInfoDataJobTrigger" />
				<ref bean="LoadBlackBookDataJobTrigger" />
				<ref bean="LoadSynTradeInfoDataJobTrigger" />
			</list>
		</property>
	</bean>

</beans>
